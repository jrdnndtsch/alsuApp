<fieldset>
	<div class="field">
	  <%= f.label :media_type %><br>
	  <%= f.select :media_type, ProjectStory::MEDIA_TYPES %>
	</div>
	<div class="hidde">
		<div class="field">
		  <%= f.label :description %><br>
		  <%= f.text_area :description %>
		</div>
		<div class="field">
		  <%= f.label :video_link %><br>
		  <%= f.text_field :video_link %>
		</div>
		<div class="field">
			<%= f.label :img %>
			<%= f.file_field :img %>
		</div>
	</div>
	<% if @project.present? %>
		<div class="field">
		  <%= f.hidden_field :project_id, value: @project.id  %>
		</div>
	<% end %>
</fieldset>